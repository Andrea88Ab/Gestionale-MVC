@{
    ViewData["Title"] = "Gestione Pagamenti";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]]</h2>

    
    <div class="row">
        <div class="col-md-6">
            <form>
                <div class="form-group">
                    <label for="dipendente">Dipendente</label>
                    <select class="form-control" id="dipendente">
                        
                    </select>
                </div>
                <div class="form-group">
                    <label for="periodo">Periodo di Pagamento</label>
                    <input type="month" class="form-control" id="periodo">
                </div>
                <div class="form-group">
                    <label for="ammontare">Ammontare</label>
                    <input type="number" class="form-control" id="ammontare" step="0.01">
                </div>
                <div class="form-group">
                    <label for="tipo">Tipo di Pagamento</label>
                    <select class="form-control" id="tipo">
                        <option>Stipendio</option>
                        <option>Acconto</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Registra Pagamento</button>
            </form>
        </div>
    </div>

    
    <div class="row mt-5">
        <div class="col-md-12">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>Dipendente</th>
                        <th>Periodo</th>
                        <th>Ammontare</th>
                        <th>Tipo</th>
                    </tr>
                </thead>
                <tbody>
                    
                </tbody>
            </table>
        </div>
    </div>
</div>
